<div class="col-md-3">
    <!-- TODO: Replace this panel with the thumbnail class for better mobile use -->
    <a href="/recipes/{{recipeid}}" style="text-decoration: none; color: inherit;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{name}}</h3>
            </div>
            <div class="panel-body">
                <p><img src="{{image}}"/></p>
                <p>{{body}}</p>
            </div>
            <div class="panel-footer">
                <p>Author: {{author}}</p>
                <p style="font-size: 75%;">Matching tags: {{tags}}</p>
            </div>
        </div>
    </a>
</div>