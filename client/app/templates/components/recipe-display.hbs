<div class="col-lg-3 col-md-3 col-xs-6">
    <a href="/recipes/{{recipeid}}" style="text-decoration: none; color: inherit;">
        <div class="thumbnail">
            <div class="panel-heading">
                <h3 class="panel-title">{{name}}</h3>
            </div>
            <img src="{{image}}"/>
            <div class="panel-body">
                <p>{{body}}</p>
            </div>
            <div class="panel-footer">
                <p>Author: {{author}}</p>
                <p style="font-size: 75%;">Matching tags: {{tags}}</p>
            </div>
        </div>
    </a>
</div>