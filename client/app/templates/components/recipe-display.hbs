<div class="col-md-3">
    <div class="panel panel-default" recipeId={{recipeid}}>
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            <p><img src="{{image}}"/></p>
            <p>{{body}}</p>
        </div>
        <div class="panel-footer">
            <p>Author: {{author}}</p>
            <p style="font-size: 75%;">Matching tags: {{tags}}</p>
        </div>
    </div>
</div>