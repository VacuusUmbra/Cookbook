{{#if user.isAuthenticated}}
    <li><a href="/users/{{user.currentUser.id}}">Logged in as {{user.currentUser.userName}}</a></li>
    <li><button type="button" {{action "logout"}} class="btn btn-default navbar-btn">Logout</button></li>
{{else}}
    <li>
        <button type="button" {{action "openLoginModal"}} class="btn btn-default navbar-btn">Login</button>
        <button type="button" {{action "openRegisterModal"}} class="btn btn-default navbar-btn">Register</button>
    </li>
{{/if}}

<div id="loginModal">
  {{#bs-modal body=false open=loginModal footer=false title="Login"}}
    {{#bs-modal-body}}
      {{#bs-form formLayout="horizontal" model=this action="authenticate" on="submit"}}
        {{bs-form-element controlType="text" label="Username" placeholder="Username" property="email"}}
        {{bs-form-element controlType="password" label="Password" placeholder="Password" property="password"}}
        {{bs-form-element controlType="checkbox" label="Remember me" property="rememberMe"}}
        {{#bs-button-group}}
          {{bs-button defaultText="Login" type="success" buttonType="submit"}}
          {{bs-button defaultText="Register" type="primary"}}
        {{/bs-button-group}}
      {{/bs-form}}
    {{/bs-modal-body}}
  {{/bs-modal}}
</div>

<div id="registerModal">
  {{#bs-modal size="lg" body=false open=registerModal footer=false title="Register"}}
    {{#bs-modal-body}}
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <form>
                    <div class="form-group">
                        <label for="emailInput">Email address</label>
                        <input type="email" class="form-control" id="emailInput" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="usernameInput">Username</label>
                        <input type="text" class="form-control" id="usernameInput" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="passwordInput">Password</label>
                        <input type="password" class="form-control" id="passwordInput" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="passwordInput2">Re-enter Password</label>
                        <input type="password" class="form-control" id="passwordInput2" placeholder="Password">
                    </div>
                    <div id="terms">
                <textarea readonly class="form-control" rows="3"
                          placeholder="Insert terms and services here..."></textarea>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Agree to terms and services
                        </label>
                    </div>
                    <button type="submit" class="btn btn-default">Register</button>
                </form>
            </div>
        </div>
    {{/bs-modal-body}}
  {{/bs-modal}}
</div>